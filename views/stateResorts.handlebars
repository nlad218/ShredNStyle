<div class="row row-cols-1 row-cols-md-2 g-4">
  {{#each stateResorts as |resort|}}

    <div class="col">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">{{resort.resortName}}</h3>
          <h4>The phone number is
            {{resort.number}}. The address is
            {{resort.address}}</h4>

          <h5 class="card-text">{{resort.description}}</h5>

          <button class="weather" value="{{resort.resortName}}">
            Check Weather</button>

        </div>
      </div>
    </div>

  {{/each}}
</div>
<script src="/js/weather.js"></script>