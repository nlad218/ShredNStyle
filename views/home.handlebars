{{! img carisel }}
<main id="homeBackround">
  <div
    id="carouselExampleAutoplaying"
    class="carousel slide"
    data-bs-ride="carousel"
  >
    <div class="carousel-indicators">
      <button
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide-to="0"
        class="active"
        aria-current="true"
        aria-label="Slide 1"
      ></button>
      <button
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide-to="1"
        aria-label="Slide 2"
      ></button>
      <button
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide-to="2"
        aria-label="Slide 3"
      ></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          class="imgcel"
          src="https://coresites-cdn-adm.imgix.net/whitelines_new/wp-content/uploads/2016/09/WI16_008482_013795-reg-mag-1920.jpg?fit=crop"
          class="d-block w-100"
          alt="..."
        />
      </div>
      <div class="carousel-item">
        <img
          class="imgcel"
          src="https://www.rei.com/dam/up_2015-02-2-3-12-stevens-005.jpg"
          class="d-block w-100"
          alt="..."
        />
      </div>
      <div class="carousel-item">
        <img
          class="imgcel"
          src="https://media.cntraveler.com/photos/63693207429b3d457f71bdda/16:9/w_2580,c_limit/Crested%20Butte_GettyImages-1334412902.jpg"
          class="d-block w-100"
          alt="..."
        />
      </div>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleAutoplaying"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleAutoplaying"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  {{! featured Data }}
  <div style="text-align: center;">
    <h1 class="m-5">Featured Products</h1>
    <div class="container text-center align-items-stretch">
      <div class="d-flex row row-cols-2 row-cols-lg-3 g-2 g-lg-4">
         {{#each products as |product|}}
        {{> productItem}}
        {{/each}}
      </div>
    </div>
  </div>
  <div style="text-align: center;">
    <h1 class="m-5">Shop By Category</h1>
    <div class="container text-center">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-2 g-lg-4">
        {{#each categories as |category|}}
        {{> categoryCard}}
        {{/each}}
      </div>
    </div>
  </div>
  <div style="text-align: center;">
    <h1 class="m-5">Services</h1>
  </div>
  <div
    id="serviceCon"
    class="d-flex flex-column justify-content-around align-items-center"
  >
   <a id="servicediv"  href="/passes">
      <div id="servImg1"></div>
      <div class="sbutt">Buy Lift Tickets
      </div>
    </a>

   <a id="servicediv"  href="/resort">
      <div id="servImg2"></div>
      <div class="sbutt">Resort Info
      </div>
    </a>

  </div>
</main>

