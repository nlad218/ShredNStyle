		<main>
			{{{body}}}
				<!-- Login/Sign Up Modal -->
				<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header d-flex flex-column-reverse">
								<h5 class="modal-title" id="loginModalLabel">Login / Sign Up</h5>
								<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							</div>
							<div class="modal-body">
								<!-- Nav tabs -->
								<ul class="nav nav-tabs justify-content-center mb-4" id="myTabs" role="tablist">
									<li class="nav-item" role="presentation">
										<a class="nav-link border rounded active border-secondary" id="login-tab" data-bs-toggle="tab" href="#login" role="tab" aria-controls="login" aria-selected="true">Login</a>
									</li>
									<li class="nav-item" role="presentation">
										<a class="nav-link border rounded border-secondary" id="signup-tab" data-bs-toggle="tab" href="#signup" role="tab" aria-controls="signup" aria-selected="false">Sign Up</a>
									</li>
								</ul>

								<!-- Tab panes -->
								<div class="tab-content" id="myTabContent">
									<!-- Login Tab -->
									<div class="tab-pane fade show active text-center" id="login" role="tabpanel" aria-labelledby="login-tab">
										<form class="mx-auto">
											<h3 class="mb-2">Welcome back!</h3>
											<div class="mb-3 text-start">
												<label for="loginEmail" class="form-label">Email address or Username:</label>
												<div class="input-group">
													<span class="input-group-text">
														<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
															<path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
														</svg>
													</span>
													<input type="text" class="form-control" id="loginEmail" placeholder="Enter your email or username">
												</div>
											</div>
											<div class="mb-3 text-start">
												<label for="loginPassword" class="form-label">Password:</label>
												<div class="input-group">
													<span class="input-group-text">
														<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-lock" viewBox="0 0 16 16">
														<path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm0 5.996V14H3s-1 0-1-1 1-4 6-4c.564 0 1.077.038 1.544.107a4.524 4.524 0 0 0-.803.918A10.46 10.46 0 0 0 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h5ZM9 13a1 1 0 0 1 1-1v-1a2 2 0 1 1 4 0v1a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1v-2Zm3-3a1 1 0 0 0-1 1v1h2v-1a1 1 0 0 0-1-1Z"/>
														</svg>
													</span>
													<input type="text" class="form-control" id="loginEmail" placeholder="Enter your email or username">
												</div>
											</div>
											<button type="submit" class="btn btn-primary">Login</button>
										</form>
									</div>
									
									<!-- Sign Up Tab -->
									<div class="tab-pane fade text-center" id="signup" role="tabpanel" aria-labelledby="signup-tab">
										<form class="mx-auto">
											<h3 class="mb-2">Join the club!</h3>
											<div class="mb-3 text-start">
												<label for="signupEmail" class="form-label">Email address:</label>
												<div class="input-group">
													<span class="input-group-text">
														<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
															<path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
														</svg>
													</span>
													<input type="text" class="form-control" id="loginEmail" placeholder="Enter your email or username">
												</div>
											</div>
											<div class="mb-3 text-start">
												<label for="signupUsername" class="form-label">Username:</label>
												<div class="input-group">
													<span class="input-group-text">
														<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
														<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
														<path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
														</svg>
													</span>
													<input type="text" class="form-control" id="loginEmail" placeholder="Enter your email or username">
												</div>
											</div>
											<div class="mb-3 text-start">
												<label for="signupPassword" class="form-label">Password:</label>
												<div class="input-group">
													<span class="input-group-text">
														<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-lock" viewBox="0 0 16 16">
														<path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm0 5.996V14H3s-1 0-1-1 1-4 6-4c.564 0 1.077.038 1.544.107a4.524 4.524 0 0 0-.803.918A10.46 10.46 0 0 0 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h5ZM9 13a1 1 0 0 1 1-1v-1a2 2 0 1 1 4 0v1a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-4a1 1 0 0 1-1-1v-2Zm3-3a1 1 0 0 0-1 1v1h2v-1a1 1 0 0 0-1-1Z"/>
														</svg>
													</span>
													<input type="text" class="form-control" id="loginEmail" placeholder="Enter your email or username">
												</div>
											</div>
											<button type="submit" class="btn btn-success">Sign Up</button>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<script src="./js/login.js"></script>
			</div>
		</main>
